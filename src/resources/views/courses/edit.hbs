<div class="my-4">
    <h3>Edit course</h3>
    
    <form method="POST" action="/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Course name</label>
            <input 
            type="text" 
            class="form-control" 
            id="name"
            name="name"
            value="{{course.name}}">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea 
            class="form-control" 
            id="description"
            name="description">{{course.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
